{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",             // <--- CHANGED: Was "commonjs"
    "moduleResolution": "NodeNext",   // <--- ADDED: Needed for ESM
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}